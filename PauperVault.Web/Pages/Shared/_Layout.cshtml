@inject Microsoft.Extensions.Configuration.IConfiguration Config
@inject IHttpContextAccessor HttpContextAccessor
@inject PauperVault.Web.Services.Account.IAccountService AccountService

@{
    var siteName = Config["Site:Name"] ?? "PauperVault";

    var isLoggedIn = AccountService.IsSignedIn(Context);
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteName</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PauperVault.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <!-- HEADER (navbar) -->
    <header class="navbar navbar-expand-lg pv-header">
        <div class="container-fluid px-3">

            <!-- Brand -->
            <a class="navbar-brand pv-logo" asp-page="/Index" aria-label="@siteName">
                <img src="~/images/logo.png" alt="@siteName" class="pv-logo-img" />
            </a>

            <!-- Burger -->
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#pvNavbar"
                    aria-controls="pvNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="pvNavbar">
                <!-- Menu gauche -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-lg-center">
                    <li class="nav-item">
                        <a class="nav-link pv-nav-link" asp-page="/Decks">Decks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link pv-nav-link" asp-page="/Staples">Staples</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link pv-nav-link" asp-page="/Formats">Formats</a>
                    </li>
                </ul>

                <!-- Actions droite -->
                <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link pv-nav-link" asp-page="/Account/Me">Mon compte</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-page="/Account/Logout">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm pv-btn-ghost">Se déconnecter</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link pv-nav-link" asp-page="/Account/Login">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-sm pv-btn-register" asp-page="/Account/Register">S’inscrire</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </header>

    <!-- CONTENT -->
    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="pv-footer mt-5">
        <div class="container py-4 text-center text-light">

            <!-- Liens haut -->
            <div class="d-flex flex-wrap justify-content-center gap-3 mb-3">
                <a class="text-light text-decoration-none" asp-page="/About">À propos</a>
                <a class="text-light text-decoration-none" asp-page="/Privacy">Confidentialité</a>
                <a class="text-light text-decoration-none" asp-page="/Legal">Mentions légales</a>
                @* Optionnel plus tard:
                   <a class="text-light text-decoration-none" asp-page="/Terms">Conditions d’utilisation</a>
                   <a class="text-light text-decoration-none" asp-page="/Contact">Contact</a>
                *@
            </div>

            <!-- Attribution / crédits -->
            <div class="small mb-2">
                Données cartes :
                <a class="text-light" href="https://scryfall.com" target="_blank" rel="noopener noreferrer">Scryfall</a>
            </div>

            <!-- Disclaimer -->
            <div class="pv-footer-disclaimer small text-secondary">
                Magic: The Gathering et toutes les marques associées sont © Wizards of the Coast LLC.
                @siteName est un projet communautaire non officiel, non affilié et non approuvé par Wizards of the Coast.
            </div>

            <hr class="border-secondary my-3" />

            <div class="small text-secondary">
                &copy; 2026 - @siteName
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
