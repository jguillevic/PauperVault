@page
@model PauperVault.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Connexion";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account-auth.css" asp-append-version="true" />
}

<div class="pv-auth">
    <main class="pv-auth-main">
        <div class="pv-auth-card card shadow-sm">
            <div class="card-body p-4 p-md-5">
                <h1 class="h3 mb-2">Connexion</h1>
                <p class="text-muted mb-4">Connectez-vous pour accéder à votre compte.</p>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @Model.ErrorMessage
                    </div>
                }

                <!-- FORM 1 : login email/password -->
                <form method="post" asp-page="/Account/Login" class="vstack gap-3" id="passwordForm">
                    <div>
                        <label class="form-label" asp-for="Input.Email">Adresse e-mail</label>
                        <input class="form-control" asp-for="Input.Email" type="email" autocomplete="email" />
                        <span class="text-danger small" asp-validation-for="Input.Email"></span>
                    </div>

                    <div>
                        <label class="form-label" asp-for="Input.Password">Mot de passe</label>
                        <input class="form-control" asp-for="Input.Password" type="password" autocomplete="current-password" />
                        <span class="text-danger small" asp-validation-for="Input.Password"></span>
                    </div>

                    <button type="submit" class="btn btn-pv w-100">
                        Se connecter
                    </button>
                </form>

                <hr class="my-4" />

                <div class="text-center">
                    <div id="g_id_onload"
                         data-client_id="@Model.GoogleClientId"
                         data-ux_mode="popup"
                         data-callback="handleGoogleCredential"
                         data-auto_prompt="false">
                    </div>

                    <div class="g_id_signin"
                         data-type="standard"
                         data-size="large"
                         data-theme="outline"
                         data-text="signin_with"
                         data-shape="rectangular"
                         data-logo_alignment="left">
                    </div>
                </div>

                <!-- FORM 2 : login Google (handler Google) -->
                <form method="post" asp-page="/Account/Login" asp-page-handler="Google" id="googleForm">
                    <input type="hidden" name="idToken" id="googleIdToken" />
                </form>

                <div class="d-flex justify-content-between align-items-center small mt-3">
                    <a class="text-decoration-none" asp-page="/Account/Register">Créer un compte</a>
                    @* Optionnel :
                    <a class="text-decoration-none" asp-page="/Account/ForgotPassword">Mot de passe oublié ?</a>
                    *@
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script>
        let googleSubmitting = false;

        function handleGoogleCredential(response) {
          if (googleSubmitting) return; // évite double submit
          googleSubmitting = true;

          document.getElementById('googleIdToken').value = response.credential;

          const form = document.getElementById('googleForm');
          form.submit();
        }
    </script>
}
